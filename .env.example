# OpenAI API Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Enable/disable actual LLM calls (set to 'true' to use OpenAI API)
# When false, returns stub data for testing without API calls
USE_ACTUAL_LLM=false

# Your OpenAI API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# OpenAI model to use (gpt-4o, gpt-4-turbo, gpt-4, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4o

# Maximum tokens for LLM responses (adjust based on chapter length)
OPENAI_MAX_TOKENS=4000

# Timeout for API calls in seconds
OPENAI_TIMEOUT=60

# Retry configuration
OPENAI_MAX_RETRIES=3
OPENAI_RETRY_MIN_WAIT=4
OPENAI_RETRY_MAX_WAIT=10

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
